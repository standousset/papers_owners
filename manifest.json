{
  "manifest_version": 3,
  "name": "French Press Funding Revealer",
  "version": "1.1",
  "description": "Appends public funding amounts (2024) to French newspaper names.",
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}